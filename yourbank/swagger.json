{
    "openapi": "3.0.0",
    "info": {
        "title": "YourBank",
        "description": "Através dessa API é possivel realizar transações bancárias, acompanhar saldo e consultar CPF na Receita Federal.",
        "termsOfService": "",
        "contact": {
            "email": "matheus_bonato@outlook.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3001/",
            "description": "Api de teste."
        }
    ],
    "paths": {
        "/accounts": {
            "post": {
                "summary": "Cadastro de conta.",
                "description": "Essa rota é responsavel por cadastrar uma conta.",
                "tags": [
                    "accounts"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Account"
                            },
                            "examples": {
                                "account": {
                                    "value": {
                                        "name": "Neymar Jr",
                                        "cpf": "753.752.089-54"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "schema": {
                                    "$ref": "#/components/schemas/Account"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Lista todas as contas.",
                "description": "Essa rota é responsavel por listar todas as contas.",
                "tags": [
                    "accounts"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "schema": {
                                    "items": {
                                        "$ref": "#/components/schemas/Account"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/accounts/{id}": {
            "get": {
                "summary": "Lista uma conta especifica.",
                "description": "Essa rota é responsavel por listar uma conta especifica.",
                "tags": [
                    "accounts"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do produto para busca",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "schema": {
                                    "$ref": "#/components/schemas/Account"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Account": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "cpf": {
                        "type": "string"
                    }
                }
            }
        }
    }
}